<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "(Delete)",
        delete_task_path(task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete '#{task.title}' ?" }
      %>
  </li>
  <% end %>
</ul>
<%= link_to '+ Create new task', new_task_path %>
